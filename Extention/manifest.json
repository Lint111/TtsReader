{
  "manifest_version": 3,
  "name": "TTS Reader",
  "version": "1.0",
  "description": "Send selected text to your desktop TTS app",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:9024/"
  ],
  "background": {
    "service_worker": "index.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_title": "TTS Reader"
  }
}
